<Window x:Class="LoginRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginRegister"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="650" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txtb_username" Grid.Row="1" Grid.Column="2" MinWidth="100" MinHeight="30" VerticalContentAlignment="Center" Height="30" MaxHeight="30"/>
        <TextBox x:Name="txtb_password" Grid.Row="2" Grid.Column="2" MinWidth="100" MinHeight="30" VerticalContentAlignment="Center" Height="30" MaxHeight="30"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Username" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Password" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
        <Button Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Content="Register" VerticalAlignment="Center" HorizontalAlignment="Center" Width="69"/>
    </Grid>
</Window>
